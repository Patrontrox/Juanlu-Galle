<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="350.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.juanlu.proyecto1.Controladores.ControladorInformacion">
    <children>
        <GridPane layoutX="-1.0" layoutY="-1.0" prefHeight="350.0" prefWidth="500.0">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button fx:id="btEmpleado" disable="true" mnemonicParsing="false" onAction="#handleShowFormEmployee" style="-fx-background-color: #5BC0DE;" text="Empleados" GridPane.rowIndex="1" GridPane.valignment="TOP" />
                <Button fx:id="bdepartamento" disable="true" mnemonicParsing="false" onAction="#handleShowFormDepartment" style="-fx-background-color: #5BC0DE;" text="Departamentos" GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.valignment="TOP" />
                <Button fx:id="bes" mnemonicParsing="false" onAction="#handleEntradaSalida" style="-fx-background-color: #5BC0DE;" text="E/S" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="MENÚ" underline="true" GridPane.columnIndex="1">
                    <font>
                        <Font name="System Bold Italic" size="24.0" />
                    </font>
                </Text>
                <Button mnemonicParsing="false" onAction="#handleSalir" style="-fx-background-color: #FF0000;" text="Salir del programa" textFill="WHITE" GridPane.rowIndex="3">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
                <Button fx:id="btCerrarSesion" mnemonicParsing="false" onAction="#handleCerrarSesion" style="-fx-background-color: #00FF0F;" text="Cerrar Sesión" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                <Button fx:id="btConsultas" disable="true" mnemonicParsing="false" onAction="#handleConsultas" style="-fx-background-color: #5BC0DE;" text="Consultas" GridPane.columnIndex="2" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
            </children>
        </GridPane>
    </children>
</AnchorPane>
